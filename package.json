{
  "name": "personal-blog-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "prisma generate",
    "build": "next build",
    "postbuild": "next-sitemap",
    "chromatic": "chromatic --exit-zero-on-changes",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:seed": "prisma db seed",
    "dev": "next dev",
    "format": "prettier --write .",
    "lint": "eslint . --color",
    "lint:fix": "bun run lint --fix",
    "prepare": "husky install",
    "size": "git count-objects --human-readable",
    "start": "next start",
    "start:db": "docker-compose up database",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "storybook:serve": "http-server storybook-static --port 6006 --silent",
    "test:storybook": "test-storybook",
    "test": "bun test",
    "test:watch": "bun --watch test",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bun run format",
      "bun run lint:fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      },
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "simple-import-sort",
      "file-progress"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:promise/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:security/recommended",
      "plugin:unicorn/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "file-progress/activate": 1,
      "unicorn/no-null": "off",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/prevent-abbreviations": "warn",
      "unicorn/prefer-query-selector": "warn",
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "pascalCase": true,
            "camelCase": true,
            "kebabCase": true
          }
        }
      ],
      "react/react-in-jsx-scope": "off",
      "security/detect-object-injection": "off",
      "@next/next/no-html-link-for-pages": "off",
      "simple-import-sort/imports": [
        "off",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^(ui|common|database|database/generated/prisma-client)$"
            ],
            [
              "^[./]"
            ]
          ]
        }
      ]
    },
    "ignorePatterns": [
      "dist",
      "generated",
      "node_modules",
      "storybook-static",
      "styles"
    ],
    "root": true
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "testEnvironment": "node",
    "testRegex": ".test.*",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@auth/core": "^0.15.2",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@harrisfauntleroy/design-system": "^2.2.7",
    "@mantine/carousel": "^6.0.21",
    "@mantine/core": "^6.0.21",
    "@mantine/dates": "^6.0.21",
    "@mantine/dropzone": "^6.0.21",
    "@mantine/form": "^6.0.21",
    "@mantine/hooks": "^6.0.21",
    "@mantine/modals": "^6.0.21",
    "@mantine/next": "^6.0.21",
    "@mantine/notifications": "^6.0.21",
    "@mantine/nprogress": "^6.0.21",
    "@mantine/prism": "^6.0.21",
    "@mantine/spotlight": "^6.0.21",
    "@mantine/tiptap": "^6.0.21",
    "@prisma/client": "5.3.1",
    "@tiptap/extension-link": "^2.1.11",
    "@tiptap/react": "^2.1.11",
    "@tiptap/starter-kit": "^2.1.11",
    "@types/node": "20.7.0",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.16",
    "cookies-next": "^2.1.2",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.10",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "embla-carousel-react": "^8.0.0-rc14",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "gray-matter": "^4.0.3",
    "next": "^13.4.19",
    "next-auth": "^4.23.1",
    "next-remove-imports": "^1.0.12",
    "next-sitemap": "^4.2.3",
    "phosphor-react": "^1.4.1",
    "postcss": "8.4.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rss": "^1.2.2",
    "sass": "^1.68.0"
  },
  "devDependencies": {
    "@jest/types": "29.6.3",
    "@storybook/addon-designs": "^7.0.5",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-interactions": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.5",
    "@storybook/nextjs": "^7.4.5",
    "@storybook/react": "^7.4.5",
    "@storybook/react-vite": "^7.4.5",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.1",
    "@types/jest": "^29.5.5",
    "@types/rss": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "chromatic": "^6.24.1",
    "eslint": "^8.50.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "0.21.0",
    "eslint-plugin-storybook": "^0.6.14",
    "eslint-plugin-unicorn": "^47.0.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "lint-staged": "^13.3.0",
    "prisma": "5.3.1",
    "storybook": "^7.4.5",
    "storybook-dark-mode": "^3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "5.2.2"
  }
}
