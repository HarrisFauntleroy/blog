{
  "name": "personal-blog-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "prisma generate",
    "build": "next build",
    "postbuild": "next-sitemap",
    "chromatic": "chromatic --exit-zero-on-changes",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:seed": "prisma db seed",
    "dev": "next dev",
    "format": "prettier --write .",
    "lint": "eslint . --color --plugin file-progress --rule \"file-progress/activate: 1\"",
    "lint:fix": "pnpm lint --fix",
    "prepare": "husky install",
    "size": "git count-objects --human-readable",
    "start": "next start",
    "start:db": "docker-compose up database",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "storybook:serve": "http-server storybook-static --port 6006 --silent",
    "test": "jest --passWithNoTests",
    "test:ci": "pnpm test --ci --coverage --maxWorkers=2",
    "test:storybook": "test-storybook",
    "test:watch": "pnpm test --watchAll",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check --watch"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not ie 11",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      },
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "simple-import-sort"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:promise/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:security/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/export": "off",
      "import/extensions": "off",
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "security/detect-object-injection": "off",
      "simple-import-sort/imports": [
        "off",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^(ui|common|database|database/generated/prisma-client)$"
            ],
            [
              "^[./]"
            ]
          ]
        }
      ]
    },
    "ignorePatterns": [
      ".pnpm",
      "dist",
      "generated",
      "node_modules",
      "pnpm",
      "storybook-static",
      "styles"
    ],
    "root": true
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    },
    "testEnvironment": "node",
    "testRegex": ".test.*",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@auth/core": "^0.11.1",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@harrisfauntleroy/design-system": "^2.1.4",
    "@mantine/carousel": "^6.0.17",
    "@mantine/core": "^6.0.17",
    "@mantine/dates": "^6.0.17",
    "@mantine/dropzone": "^6.0.17",
    "@mantine/form": "^6.0.17",
    "@mantine/hooks": "^6.0.18",
    "@mantine/modals": "^6.0.17",
    "@mantine/next": "^6.0.17",
    "@mantine/notifications": "^6.0.17",
    "@mantine/nprogress": "^6.0.17",
    "@mantine/prism": "^6.0.17",
    "@mantine/spotlight": "^6.0.17",
    "@mantine/tiptap": "^6.0.17",
    "@prisma/client": "5.1.1",
    "@tiptap/extension-link": "^2.0.4",
    "@tiptap/react": "^2.0.4",
    "@tiptap/starter-kit": "^2.0.4",
    "@types/node": "20.4.6",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.15",
    "cookies-next": "^2.1.2",
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.9",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "embla-carousel-react": "^8.0.0-rc11",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.12",
    "graphql": "^16.7.1",
    "graphql-request": "^6.1.0",
    "gray-matter": "^4.0.3",
    "next": "^13.4.13",
    "next-auth": "^4.23.0",
    "next-remove-imports": "^1.0.12",
    "phosphor-react": "^1.4.1",
    "postcss": "8.4.27",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rss": "^1.2.2",
    "sass": "^1.64.2",
    "storybook": "^7.0.4",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@jest/types": "29.5.0",
    "@storybook/addon-designs": "^7.0.5",
    "@storybook/addon-essentials": "^7.2.2",
    "@storybook/addon-interactions": "^7.2.2",
    "@storybook/addon-links": "^7.2.2",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.2.2",
    "@storybook/nextjs": "^7.3.2",
    "@storybook/react": "^7.2.2",
    "@storybook/react-vite": "^7.2.2",
    "@storybook/test-runner": "^0.13.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/jest": "^29.5.2",
    "@types/rss": "^0.0.30",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chromatic": "^6.21.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-storybook": "^0.6.13",
    "eslint-plugin-unicorn": "^47.0.0",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "lint-staged": "^13.2.3",
    "prisma": "5.1.1",
    "storybook": "^7.2.2",
    "storybook-dark-mode": "^3.0.1",
    "ts-jest": "^29.1.0"
  }
}
